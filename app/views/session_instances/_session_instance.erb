<div id="<%= dom_id session_instance %>">
  
  <div id="blocks">
    <%= render partial: "blocks/block", locals: { block: @parent }  %>
  </div>

  <div id="exercises">
    <%= render partial: "exercise_instances/exercise_instance", locals: { exercise_instance: @parent }  %>
  </div>

  <%# <div id="exercise_instances"> %>
    <%#= render session_instance.exercise_instances.order(created_at: :asc) %>
  <%# </div> %>

  <div class="new_exercise mt-2 mx-2">
    <%= link_to "+ Add exercise", new_session_session_instance_exercise_instance_path(session_instance.session, session_instance), "data-controller": "turbo", class: "btn btn-primary" %>
  </div>
  
  <%#= turbo_frame_tag "new_exercise_instance", src: new_session_exercise_instance_path(session_instance.session), target: "_top" %>
  
  <div class="session_instance-actions">
    <div class="handle">
      <i class="fas fa-grip-lines"></i>
    </div>

    <%= button_to session_session_instance_path(session_instance.session, session_instance), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn-styling" do %>
      <i class="show-icon fas fa-trash-alt inline-delete"></i>
    <% end %>
  </div>
</div>
