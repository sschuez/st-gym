<div class="col">
  <%= link_to workout_path(workout.id) do %>
    <div class="selected-workout card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg" style="background-image: url(/assets/<%= image_name %>);"> 
      <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-1">
        <h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold"><%= workout.name %></h2>
        <ul class="d-flex list-unstyled mt-auto">
          <li class="d-flex align-items-center me-3">
            <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"/></svg>
            <small><%= category %></small>
          </li>
          <li class="d-flex align-items-center">
            <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"/></svg>
            <small><%= time %> min</small>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>