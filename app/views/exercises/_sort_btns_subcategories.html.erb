<%= turbo_frame_tag "subcategories" do %>
  <%= debug params %>
  <%= debug "user_category_id: #{@user_category}" %>
  <%= debug "main_category_id: #{@main_category}" %>
  <%= render "exercises/sort_btn", name: "category", checked: true, class_list: "category", btn_value: "reset_category_list", btn_id: "category_id_all", label: "All" %>

  <% other_categories_that_have_exercises(exercises).each do |category| %>
    <%= render "exercises/sort_btn", name: "category", checked: false, class_list: "category", btn_value: category.id, btn_id: "category_id_#{category.id}", label: "#{category.name.capitalize} (#{other_category_exercises_count(user_category, main_category, category.id)})" %>
  <% end %>
<% end %>