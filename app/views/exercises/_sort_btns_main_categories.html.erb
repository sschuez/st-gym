<%= turbo_frame_tag "main_categories" do %>
  <%= render "exercises/sort_btn", name: "main_category", checked: true, class_list: "main-category", btn_value: "reset_main_category_list", btn_id: "main_category_id_all", label: "All" %>

  <% main_categories_that_have_exercises(exercises).each do |category| %>
    <%= render "exercises/sort_btn", name: "main_category", checked: false, class_list: "main-category", btn_value: category.id, btn_id: "category_id_#{category.id}", label: "#{category.name.capitalize} (#{main_category_exercises_count(user_category, category.id)})" %>
  <% end %>
<% end %>