<div class="my-header">
  <h1>Exercises (<%= @exercises.count %>)</h1>
    <div class="mt-auto p-2">
      <% if user_signed_in? %>
        <%= link_to "⚡️ Add new exercise", new_exercise_path, data: { controller: "turbo" }, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "⚡️ Add new exercise", new_exercise_path, class: "btn btn-primary" %>
      <% end %>
    </div>
</div>
<p class="my-3">
  Choose among many cool exercises or add a new one, if you're missing something
</p>

<div id="exercises">
  <%= render @exercises %>
</div>

